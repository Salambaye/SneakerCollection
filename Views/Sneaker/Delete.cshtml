
@model Sneaker
@{
    ViewData["Title"] = $"Supprimer - {Model.FullName}";
}

<div class="container py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Home")" class="text-decoration-none">
                    <i class="bi bi-house-fill me-1"></i>Accueil
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index")" class="text-decoration-none">Collection</a>
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("Details", new { id = Model.Id })" class="text-decoration-none">@Model.Model</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Supprimer</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Alert de danger -->
            <div class="alert alert-danger alert-custom d-flex align-items-center mb-4" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-3" style="font-size: 1.5rem;"></i>
                <div>
                    <h5 class="alert-heading mb-1">Attention - Suppression définitive</h5>
                    <p class="mb-0">Cette action est <strong>irréversible</strong>. La sneaker sera définitivement supprimée de votre collection.</p>
                </div>
            </div>

            <!-- Carte de confirmation -->
            <div class="card card-custom border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-trash-fill me-2"></i>Confirmer la Suppression
                    </h4>
                </div>

                <div class="card-body">
                    <!-- Détails de la sneaker à supprimer -->
                    <div class="row g-4">
                        <div class="col-md-4">
                            <img src="@Model.DisplayImageUrl" class="img-fluid rounded" alt="@Model.FullName"
                                 style="max-height: 200px; width: 100%; object-fit: cover;"
                                 onerror="this.src='https://via.placeholder.com/300x200/dc3545/ffffff?text=À+Supprimer'">
                        </div>

                        <div class="col-md-8">
                            <h3 class="fw-bold text-danger mb-3">@Model.FullName</h3>

                            <div class="row g-3">
                                <div class="col-sm-6">
                                    <strong class="text-muted d-block">Marque</strong>
                                    <span class="fs-5">@Model.Brand.GetDisplayName()</span>
                                </div>

                                <div class="col-sm-6">
                                    <strong class="text-muted d-block">Prix</strong>
                                    <span class="fs-5 text-primary">@Model.Price.ToString("C")</span>
                                </div>

                                <div class="col-sm-6">
                                    <strong class="text-muted d-block">Taille</strong>
                                    <span class="fs-5">@Model.Size (US)</span>
                                </div>

                                <div class="col-sm-6">
                                    <strong class="text-muted d-block">État</strong>
                                    <span class="@Model.ConditionBadgeClass">@Model.Condition.GetDisplayName()</span>
                                </div>

                                <div class="col-sm-6">
                                    <strong class="text-muted d-block">Catégorie</strong>
                                    <span class="fs-6">@Model.Category.GetDisplayName()</span>
                                </div>

                                <div class="col-sm-6">
                                    <strong class="text-muted d-block">Ajoutée le</strong>
                                    <span class="fs-6">@Model.AddedDate.ToString("dd/MM/yyyy")</span>
                                </div>

                                @if (Model.IsLimited)
                                {
                                    <div class="col-12">
                                        <span class="badge bg-warning text-dark fs-6">
                                            <i class="bi bi-lightning-fill me-1"></i>Édition Limitée
                                        </span>
                                    </div>
                                }

                                @if (!string.IsNullOrEmpty(Model.Description))
                                {
                                    <div class="col-12">
                                        <strong class="text-muted d-block">Description</strong>
                                        <p class="mb-0 text-muted">@Model.Description</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Message de confirmation -->
                    <div class="mt-4 p-3 bg-light rounded">
                        <h5 class="text-danger">
                            <i class="bi bi-question-circle-fill me-2"></i>
                            Êtes-vous absolument certain(e) de vouloir supprimer cette sneaker ?
                        </h5>
                        <p class="mb-0 text-muted">
                            Une fois supprimée, <strong>@Model.FullName</strong> sera définitivement retirée de votre collection
                            et ne pourra plus être récupérée.
                        </p>
                    </div>
                </div>

                <!-- Actions -->
                <div class="card-footer bg-light">
                    <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirmFinalDelete()">
                        <input asp-for="Id" type="hidden" />

                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex gap-2">
                                <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-secondary btn-lg">
                                    <i class="bi bi-arrow-left me-2"></i>Annuler
                                </a>
                                <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-lg">
                                    <i class="bi bi-collection me-2"></i>Retour Collection
                                </a>
                            </div>

                            <button type="submit" class="btn btn-danger btn-lg" id="deleteBtn">
                                <i class="bi bi-trash-fill me-2"></i>
                                <span class="btn-text">Supprimer Définitivement</span>
                                <span class="loading-text d-none">
                                    <span class="spinner-border spinner-border-sm me-2"></span>Suppression...
                                </span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Alternatives suggérées -->
            <div class="card card-custom mt-4">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bi bi-lightbulb-fill text-warning me-2"></i>Alternatives à la suppression
                    </h6>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-pencil-square text-primary me-3" style="font-size: 1.5rem;"></i>
                                <div>
                                    <h6 class="mb-1">Modifier les informations</h6>
                                    <small class="text-muted">Corrigez les détails au lieu de supprimer</small>
                                    <div class="mt-1">
                                        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary btn-sm">
                                            Modifier
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-archive text-secondary me-3" style="font-size: 1.5rem;"></i>
                                <div>
                                    <h6 class="mb-1">Marquer comme vendue</h6>
                                    <small class="text-muted">Changez l'état ou réduisez le stock</small>
                                    <div class="mt-1">
                                        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-secondary btn-sm">
                                            Modifier État
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmFinalDelete() {
            const sneakerName = '@Html.Raw(Html.Encode(Model.FullName))';
            const confirmed = confirm(
                `⚠️ DERNIÈRE CONFIRMATION ⚠️\n\n` +
                `Vous êtes sur le point de supprimer définitivement :\n` +
                `"${sneakerName}"\n\n` +
                `Cette action est IRRÉVERSIBLE.\n\n` +
                `Tapez "SUPPRIMER" dans le champ ci-dessous pour confirmer :`
            );

            if (confirmed) {
                const userInput = prompt('Tapez "SUPPRIMER" pour confirmer :');
                if (userInput === 'SUPPRIMER') {
                    // Afficher le loading
                    const btn = document.getElementById('deleteBtn');
                    btn.querySelector('.btn-text').classList.add('d-none');
                    btn.querySelector('.loading-text').classList.remove('d-none');
                    btn.disabled = true;

                    return true;
                } else {
                    alert('Suppression annulée. Vous devez taper exactement "SUPPRIMER" pour confirmer.');
                    return false;
                }
            }

            return false;
        }

        // Animation d'entrée
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.card');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    card.style.transition = 'all 0.6s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 200);
            });
        });
    </script>
}

