<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SneakerCollection</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary-color: #ff6b35;
            --secondary-color: #2c3e50;
            --accent-color: #e74c3c;
            --dark-bg: #1a1a1a;
            --light-bg: #f8f9fa;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--light-bg);
            color: var(--secondary-color);
        }

        .navbar-custom {
            background: linear-gradient(135deg, var(--secondary-color) 0%, var(--dark-bg) 100%);
            box-shadow: 0 2px 20px rgba(0,0,0,0.1);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            color: white !important;
        }

        .nav-link {
            color: rgba(255,255,255,0.9) !important;
            font-weight: 500;
            transition: all 0.3s ease;
        }

            .nav-link:hover {
                color: var(--primary-color) !important;
                transform: translateY(-1px);
            }

        .btn-primary-custom {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--accent-color) 100%);
            border: none;
            border-radius: 8px;
            font-weight: 600;
            padding: 10px 20px;
            transition: all 0.3s ease;
        }

            .btn-primary-custom:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(255,107,53,0.3);
            }

        .card-custom {
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
            overflow: hidden;
        }

            .card-custom:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 40px rgba(0,0,0,0.15);
            }

        .sneaker-image {
            height: 200px;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .card-custom:hover .sneaker-image {
            transform: scale(1.05);
        }

        .badge-custom {
            font-size: 0.8rem;
            font-weight: 600;
            padding: 6px 12px;
            border-radius: 20px;
        }

        .price-tag {
            font-size: 1.2rem;
            font-weight: 700;
            color: var(--primary-color);
        }

        .hero-section {
            background: linear-gradient(135deg, var(--secondary-color) 0%, var(--dark-bg) 100%);
            color: white;
            padding: 60px 0;
            margin-bottom: 40px;
        }

        .search-bar {
            border-radius: 25px;
            border: 2px solid #e9ecef;
            padding: 12px 20px;
            transition: all 0.3s ease;
        }

            .search-bar:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 0.2rem rgba(255,107,53,0.25);
            }

        .footer-custom {
            background-color: var(--secondary-color);
            color: white;
            margin-top: 60px;
        }

        .alert-custom {
            border: none;
            border-radius: 10px;
            font-weight: 500;
        }

        .text-gradient {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--accent-color) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .loading-spinner {
            display: none;
        }

        .btn-outline-custom {
            border: 2px solid var(--primary-color);
            color: var(--primary-color);
            font-weight: 600;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .btn-outline-custom:hover {
                background-color: var(--primary-color);
                color: white;
                transform: translateY(-1px);
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <i class="bi bi-lightning-charge-fill me-2"></i>SneakerCollection
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">
                                <i class="bi bi-house-fill me-1"></i>Accueil
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Sneaker")">
                                <i class="bi bi-grid-fill me-1"></i>Collection
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Search", "Sneaker")">
                                <i class="bi bi-search me-1"></i>Rechercher
                            </a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="btn btn-primary-custom btn-sm" href="@Url.Action("Create", "Sneaker")">
                                <i class="bi bi-plus-lg me-1"></i>Ajouter
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-grow-1">
        <!-- Messages de notification -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="container mt-3">
                <div class="alert alert-success alert-custom alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="container mt-3">
                <div class="alert alert-danger alert-custom alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }

        @RenderBody()
    </main>

    <footer class="footer-custom py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5><i class="bi bi-lightning-charge-fill me-2"></i>SneakerCollection</h5>
                    <p class="mb-0">Votre plateforme de collection de sneakers</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">
                        <i class="bi bi-code-slash me-1"></i>
                        Développé par <strong>@ViewData["Developer"]  Salamata Nourou MBAYE </strong>
                    </p>
                    <small>Projet académique Retail e-commerce - Prof. Marcel Stefan Wagner, PhD</small>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Scripts personnalisés -->
    <script>
        // Animation au chargement
        document.addEventListener('DOMContentLoaded', function() {
            // Fade in des cards
            const cards = document.querySelectorAll('.card-custom');
            cards.forEach((card, index) => {
                setTimeout(() => {
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(20px)';
                    card.style.transition = 'all 0.6s ease';
                    setTimeout(() => {
                        card.style.opacity = '1';
                        card.style.transform = 'translateY(0)';
                    }, 100);
                }, index * 100);
            });

            // Auto-hide alerts après 5 secondes
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                setTimeout(() => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }, 5000);
            });
        });

        // Confirmation de suppression
        function confirmDelete(itemName) {
            return confirm(`Êtes-vous sûr de vouloir supprimer "${itemName}" ?\n\nCette action est irréversible.`);
        }

        // Loading spinner pour les formulaires
        function showLoading(button) {
            const originalText = button.innerHTML;
            button.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Traitement...';
            button.disabled = true;

            setTimeout(() => {
                button.innerHTML = originalText;
                button.disabled = false;
            }, 10000); // Timeout après 10 secondes
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>